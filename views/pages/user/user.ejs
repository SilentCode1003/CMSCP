
<!-- Modal -->
<div class="modal fade" id="staticmodal" data-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticmodalLabel" aria-hidden="true">
  <div class="modal-dialog ">
    <div class="modal-content">
      <div class="modal-header modalheader">
        <button type="button" id="buttoncloseX" class="btn-close close p-1" data-bs-dismiss="modal" aria-label="Close">
          <i class="bi bi-x-square-fill"></i>
        </button>
      </div>
      <div class="modal-body user-body">
        <div class="row">
          <div class="col-md-6 mb-2">
            <input type="text" class="form-control products-control" id="fullname" name="fullname"placeholder="Fullname">
            <input type="hidden" id=fullname">
            <input type="text" class="form-control products-control mt-3" id="username"  name="username" placeholder="Username">
          </div>
          <div class="col-md-6">
            <input type="password" class="form-control products-control" id="password" name="password" placeholder="Password">
            <i class="fas fa-eye position-absolute" id="togglePassword" style="right: 25px; top: 18%; transform: translateY(-50%); cursor: pointer;"></i>
            <select class="form-select products-control  mt-3" aria-label="Default select example" id="selectaccess" name="selectaccess">
              <option selected disabled>Select Type</option>
            </select>
          </div>
        </div>
    </div>
    
      <div class="modal-footer">
        <button type="button" class="btn updatebtn" name='save-button' id="save-button">Save</button>
      </div>
    </div>
  </div>
</div> 
